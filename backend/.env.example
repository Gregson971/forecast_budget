# Base de données
POSTGRES_DB=forecast_budget
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# DATABASE_URL pour développement local (décommenter si vous utilisez uvicorn directement):
# DATABASE_URL=postgresql://postgres:password@localhost:5432/forecast_budget
# Note: Pour Docker, DATABASE_URL est automatiquement configuré dans docker-compose.yml

# Sécurité
SECRET_KEY=your_super_secret_key_here_change_this_in_production

# CORS - Origines autorisées (format JSON array)
# Développement local:
ORIGINS_ALLOWED=["http://localhost:3000"]

# Production (exemple avec Vercel):
# ORIGINS_ALLOWED=["https://your-app.vercel.app","https://forecast-budget.vercel.app"]

# Plusieurs domaines en production:
# ORIGINS_ALLOWED=["https://your-app.vercel.app","https://www.your-domain.com","https://your-domain.com"]

# Environnement
DEBUG=true
ENVIRONMENT=development

# Railway/Production (décommenter et modifier pour la production):
# DEBUG=false
# ENVIRONMENT=production
# ORIGINS_ALLOWED=["https://forecast-budget.vercel.app"]
# SECRET_KEY=your_very_long_random_secret_key_for_production
